<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/studentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            />


        <TextView
            android:id="@+id/studentMailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="519000000"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_below="@+id/studentNameText"
            />
        <TextView
            android:id="@+id/courseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course: "
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_below="@+id/studentMailText"
            />

        <TextView
            android:id="@+id/studentCourseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentMailText"
            android:layout_marginTop="6dp"

            android:layout_toEndOf="@+id/courseText"
            android:text="Python advance"

            android:textColor="#000"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>